// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id          String    @id @default(cuid(2))
  email       String    @unique
  password    String?
  googleId    String?   @unique
  name        String?
  picture     String?
  phoneNumber String?
  role        Role      @default(USER)
  listings    Listing[]
  comments    Comment[]
}

model Images {
  id        String  @id @default(cuid(2))
  url       String
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}

model Category {
  id       String    @id @default(cuid(2))
  name     String    @unique
  description String?
  listings Listing[]
  attributes AttributeDefinition[]
}

model Listing {
  id          String    @id @default(cuid(2))
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  title       String
  description String?
  price       Float
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  images      Images[]
  attributes  ListingAttribute[]
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Comment {
  id        String    @id @default(cuid(2))
  parentId  String? // For nested comments (replies)
  parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade)
  listingId String
  listing   Listing   @relation(fields: [listingId], references: [id], onDelete: Cascade)
  authorId  String
  author    User      @relation(fields: [authorId], references: [id])
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  replies   Comment[] @relation("CommentToComment")
}

enum AttributeType {
  STRING
  INT
  FLOAT
  BOOLEAN
  DATE
  ENUM
  JSON
}

model AttributeDefinition {
  id         String        @id @default(cuid(2))
  categoryId String
  category   Category      @relation(fields: [categoryId], references: [id])
  name       String
  key        String
  type       AttributeType @default(STRING)
  required   Boolean       @default(false)
  options    Json?         // for enum/options metadata
  minNumber  Float?        // min value for INT/FLOAT attributes
  maxNumber  Float?        // max value for INT/FLOAT attributes
  minDate    DateTime?     // minimum date for DATE attributes
  maxDate    DateTime?     // maximum date for DATE attributes
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  listingAttributes ListingAttribute[]

  @@unique([categoryId, key])
}

model ListingAttribute {
  id          String    @id @default(cuid(2))
  listingId   String
  listing     Listing   @relation(fields: [listingId], references: [id], onDelete: Cascade)
  attributeId String
  attribute   AttributeDefinition @relation(fields: [attributeId], references: [id])
  value       Json
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([listingId, attributeId])
}
